<h1 class="align-center">Sign Up</h1>
<div class="row ">
  <div class="col-md-6 col-md-offset-3">
<% if @user.errors.any? %>
<div class=" alert alert-danger " >
  Something goes wrong:
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li class="error"><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<%= form_for @user do |f|%>
  <p>
    <%= f.label :name %></br>
    <%= f.text_field :name ,class: "form-control", id: "name" %>
   </p>
  <p>
    <%= f.label :email %></br>
    <%= f.text_field  :email, class: "form-control", id: "email"%>
  </p>
  <p>
    <%= f.label :city %></br>
    <%= f.text_field  :city, class: "form-control", id: "city" %>
  </p>
  <p>
    <%= f.label :profile_img %></br>
    <%= f.file_field :profile_img, :id=>"img", class: "form-control"%>
  </p>
  <p>
    <%= f.label :password %></br>
    <%= f.password_field :password, class: "form-control", id: "password"%>
  </p>
  <p>
    <%= f.label :password_confirmation %></br>
    <%= f.password_field :password_confirmation, class: "form-control", id: "password_confirmation"%>
  </p>
   <p class="align-center">
    <%= f.submit "Sign Up", class: "btn btn-primary ", id: "Sign Up" %>
    </p>
<% end %>
</div>
</div>
