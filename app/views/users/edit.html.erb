<h1 class="align-center">Sign Up</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">


<%= form_for @user do |f|%>
  <p>
    <%= f.label :name %></br>
    <%= f.text_field :name ,class: "form-control" %>
   </p>
  <p>
    <%= f.label :email %></br>
    <%= f.text_field  :email, class: "form-control"%>
  </p>
  <% if @user.profile_img %>
  <%= image_tag @user.profile_img.small.url, class: "img-rounded" %>
</p>
  <%= f.label "Delete profile image" %></br>
  <%= f.check_box :remove_profile_img %>
</p>
<% end %>
  <p>
    <%= f.label :profile_img %></br>
    <%= f.file_field :profile_img, :id=>"img", class: "form-control"%>
  </p>

  <h6> Enter yours password to save changes</h6>
<%= render :partial => 'password', :locals => { :f => f} %>

   <p class="align-center">
    <%= f.submit "Edit", class: "btn btn-primary " %>
    </p>
<% end %>

</div>
</div>
