
  <div class="">
    <div style=''>
    <div id="map" style='width: 200px; height: 200px;'></div>
  </div>
  </div>
  <div class="row">

<div class="col-sm-4">
  <h4><%= @user.name %></h4>
  <h6><%= @user.email %></h6>
  <h6><%= @user.latitude %></h6>
  <h6><%= @user.longitude %></h6>
<%= image_tag @user.profile_img.small.url, class: "" %>
<% if is_a_current_user?(@user) %>
<h6><%=link_to "Edit", edit_user_path(@user) %></h6>
<% end %>

</div>
<div class="col-sm-4">
Posts:  <h1><%= @user.posts.count %></h1>
<% @user.posts.each do |post|%>
<p>
  <h6><%=link_to post.title, post_path(post) %></h6>
</p>
<% end %>
Comments:  <h1><%= @user.comments.count %></h1>
<% @user.comments.each do |comment|%>
<p>
  <h6><%= comment.text %></h6>
</p>
<% end %>
</div>
</div>

<script type="text/javascript">
handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
markers = handler.addMarkers([
  {
    "lat":  <%= @user.latitude %>,

    "lng": <%= @user.longitude %>,

    "infowindow": "<b><%= @user.name %></b>"
  }
]);
handler.map.centerOn([<%= @user.latitude %>, <%= @user.longitude %>]);

});
</script>
