var value = $(".show_all").text()
if (value =='Show all' ){
$(".commentarys_container").html(
  '<% @post.comments.order(created_at: :desc).limit(-1).each do |comment| %>'+
    '<div class="row border-top padding">'+
     '<div class="col-sm-2  height-120 hidden-xs padding">'+
       '<a href=<%= user_path(comment.user)%> class="thumbnail">'+
         '<%= image_tag comment.user.profile_img.smaller.url %>'+
       '</a>'+
     '</div>'+
     '<div class="col-sm-8  height-120">'+
       '<p class="font-12"><span class=" font-12 badge"><%=comment.user.name %> posted <%=  time_ago_in_words(comment.created_at)%> ago </span></p>'+
       '<h4 class="border-top-bot"><%=  comment.text %></h4>'+
     '</div>'+
    '</div>'+
  ' <% end %>'+
  ' <p class="align-center border-top-bot" style="padding-bottom: 30px>'+
     '<a href="#" class="btn btn-success  show_all" data-remote="true">Hide</a>'+
  ' </p>');
}
else {
  $(".commentarys_container").html("<%= j render :partial => 'shared/all_comments',  :locals => {:n=> 2 }%>"
);

}
