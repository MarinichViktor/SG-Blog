<b>New Post Page</b>

  <% if @post.errors.any? %>
    <p>Something goes wrong:</p>
    <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_for @post do |f|%>
    <p><%= f.label "title" %> </br>
    <%= f.text_field :title , :id=>"post_name" %></p>
    <p><%= f.label :body %></br>
    <%= f.text_area :body, :id=>"post_val" %></p>
    <%= f.submit :Create, :id=>"post_send" %>
  <% end %>
