<div class="row border-top-bot profile-container">
  <div class="col-sm-4 ">
    <%= render partial: "shared/profile" %>

  </div>
  <div class="col-sm-7  post-body border padding white">
    <strong><h1 class="align-center add-margin">"<%= @post.title%>"</h1></strong>

      <p class="align-center add-margin">
        <%= image_tag @post.image.medium.url, class: "img-thumbnail" %>
      </p>
    <p class="add-margin">
      <%= @post.body%>
    </p>
  </div>
</div>
<div class="row  border-top-bot ">
<div class="col-sm-10 new-comment col-sm-offset-1 ">
 <div class="col-sm-8 col-sm-offset-2">
   <% if user_signed_in? %>
   <%= render :partial => "./comments/new_comment"%>
   <% else%>
   <p class="align-center">Sign in to post yours comment</p>
   <%end %>
 </div>
</div>
</div>

<div class=" col-sm-10 col-sm-offset-1 commentarys_container padding">
  <%= render :partial => "./comments/all_comments",  :locals => {:n=> 2 }%>
</div>
<div class="row">

  <div class="col-sm-12 title btns">
    <%=link_to 'Main page', root_path, id: "Main page", class: "btn btn-success "%>
 <%if current_user == @post.user %>
    <%=link_to 'Edit post', edit_post_path(@post),class: "btn btn-warning ",id: "Edit"%>
    <%=link_to 'Delete post', post_path(@post.id),class: "btn btn-danger ", id: "Delete", method: :delete, data: {confirm: "Are you sure?"}%>
<% end %>
  </div>
</div>
