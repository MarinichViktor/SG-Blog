


  <div class="col-xs-12 title">
    <%= @post.title%>
  </div>

  <div class="col-xs-12 body">
    <p class="body-text"><%= @post.body%></p>
  </div>

  <div class="col-xs-12 title btns">

    <%=link_to 'Main page', root_path, id: "Main page", class: "btn btn-success btn-sm"%>
    <%=link_to 'Edit post', edit_post_path(@post),class: "btn btn-warning btn-sm"%>
    <%=link_to 'Delete post', post_path(@post.id),class: "btn btn-danger btn-sm", method: :delete, data: {confirm: "Are you sure?"}%>

  </div>
